@model ExpertPizzaWebApp.Models.Pizza

@{
    ViewData["Title"] = "Create";
}

<h2>Create a pizza</h2>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Hot sauce
                <input asp-for="HasHotsauce" class="form-control" />
                <span asp-validation-for="HasHotsauce" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ham
                <input asp-for="HasHam" class="form-control" />
                <span asp-validation-for="HasHam" class="text-danger"></span>
            </div>
            <div class="form-group">
                Sausage
                <input asp-for="HasSausage" class="form-control" />
                <span asp-validation-for="HasSausage" class="text-danger"></span>
            </div>
            <div class="form-group">
                Pepperoni
                <input asp-for="HasPepperoni" class="form-control" />
                <span asp-validation-for="HasPepperoni" class="text-danger"></span>
            </div>
            <div class="form-group">
                Number of pizzas desired
                <input asp-for="PizzaCount" class="form-control" />
                <span asp-validation-for="PizzaCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
