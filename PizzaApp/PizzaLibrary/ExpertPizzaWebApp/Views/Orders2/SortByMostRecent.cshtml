@model IEnumerable<ExpertPizzaWebApp.Models.Order>

@{
    ViewData["Title"] = "Sort By MostRecent";
}

<h2>Sorted by most recent order</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <em>  Time Ordered </em>
            </th>
            <th>
                Price
            </th>
            <th>
                Pizzas Ordered
            </th>
            <th>
                User First Name
            </th>
            <th>
                User Last Name
            </th>
            <th>
                User Location
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <em> @Html.DisplayFor(modelItem => item.TimeStamp)</em>
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Pizza.Price)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Pizza.PizzaCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.City)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>