@model IEnumerable<ExpertPizzaWebApp.Models.StoreLocation>

@{
    ViewData["Title"] = "Index";
}

<h2>Store locations</h2>

<table class="table">
    <thead>
        <tr>
            <th>
               # @Html.DisplayNameFor(model => model.Pepperoni)
            </th>
            <th>
               # @Html.DisplayNameFor(model => model.Sausage)
            </th>
            <th>
               # @Html.DisplayNameFor(model => model.Ham)
            </th>
            <th>
               # @Html.DisplayNameFor(model => model.Hotsauce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pepperoni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sausage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotsauce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.StoreId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
